{
    "id": "button",
    "name": {
      "en": "Button",
      "de": "Taste",
      "nl": "Knop"
    },
    "class": "button",
    "capabilities": [
      "button",
    
      "button.reconnect"
    ],
    "images": {
      "large": "/drivers/button/assets/images/large.png",
      "small": "/drivers/button/assets/images/small.png"
  },
  "$extends": [ "capabilitiesOptions",  "repair" ],
  "pair": [
    {
        "id": "loading",
        "template": "loading",
        "navigation": {
          "next": "list_devices"
        }
    },
    {
        "id": "login_credentials",
        "template": "login_credentials",
        "options": {
            "logo": "logo.png",
            "usernameLabel": { 
                "en": "Server" 
            },
            "usernamePlaceholder": { 
                "en": "http://192.168.xxx.xxx:8123" 
            },
            "passwordLabel": { 
                "en": "Token" 
            },
            "passwordPlaceholder": { 
                "en": "Long-lived access token" 
            }
        }
    },
    {
        "id": "list_devices",
        "options": { "singular": false }
    },
    {
        "id": "icon",
        "navigation": {
          "next": "add_devices",
          "prev": "list_devices" 
        }
    },
    {
        "id": "add_devices"
    }
]

}
